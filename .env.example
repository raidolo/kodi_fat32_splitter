# Authentication Configuration
# Set to 'true' to enable OIDC, 'false' for Local Admin mode
OIDC_AUTH=true

# OIDC Provider Details (Required if OIDC_AUTH=true)
OIDC_AUTHORITY=https://auth.yourdomain.com
OIDC_CLIENT_ID=your-client-id

# Security Configuration
# IMPORTANT: Set a strong random secret for production (e.g. `openssl rand -hex 32`)
SECRET_KEY=your-secret-key-here

# Setup Control
# Set to 'false' after initial setup to disable the /api/setup endpoint
SETUP_ENABLED=true
